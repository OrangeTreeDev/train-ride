/* pages/development/development.wxss */
.developments {
  padding: 0 36rpx;
}
.development {
  display: flex;
  margin-top: 24rpx;
  border-bottom: 2rpx solid #E9E9E8;
}
.development .avatar {
  width: 84rpx;
  height: 84rpx;
  margin-right: 20rpx;
  border-radius: 10rpx;
}

/* 图文消息 */
.message .nickname {
  font-size: 36rpx;
  font-weight: bold;
  color: #5E6990;
}
.message .detail {
  width: 570rpx;
}
.message .detail .text {
  margin-top: 22rpx;
   word-break:break-all;
}
.message .detail .photos {
  margin-top: 22rpx;
}
.message .detail .photos image {
  width: 150rpx;
  height: 150rpx;
  margin-right: 12rpx;
}

/* 互动按钮 */
.message .interaction {
  display: flex;
  height: 90rpx;
  align-items: center;
}
.interaction .interaction-item {
  display: flex;
  align-items: center;
}
.interaction .interaction-item image {
  width: 36rpx;
  height: 36rpx;
  margin-right: 8rpx;
}
.interaction .interaction-item text {
  font-size: 28rpx;
}
.interaction .like {
  margin-left: 24rpx
}